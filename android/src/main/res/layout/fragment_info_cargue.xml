<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
        >

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextCiudad"
            android:layout_below="@+id/textView19" android:layout_centerHorizontal="true"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:inputType="textPersonName" android:ems="10" android:id="@+id/editTextCarga"
              android:layout_below="@+id/textView20" android:layout_alignLeft="@+id/editTextCiudad"
              android:layout_alignStart="@+id/editTextCiudad"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:text="Enviar"
            android:id="@+id/ButtonMantenimiento" android:layout_below="@+id/editTextCarga"
            android:layout_alignRight="@+id/editTextCarga" android:layout_alignEnd="@+id/editTextCarga"
            android:layout_marginRight="33dp" android:layout_marginEnd="33dp" android:layout_marginTop="35dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Chat"
            android:elevation="20dp" android:id="@+id/ButtonChat"
            android:layout_alignTop="@+id/ButtonMantenimiento" android:layout_alignLeft="@+id/editTextCarga"
            android:layout_alignStart="@+id/editTextCarga"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:elevation="20dp" android:id="@+id/ButtonOpciones"
            android:text="Opciones"
                 android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" android:layout_marginBottom="20dp"
                 android:layout_marginLeft="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FINALIZACION DE VIAJE"
            android:id="@+id/textView3" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIUDAD DE DESTINO"
            android:id="@+id/textView19"
            android:layout_marginTop="146dp"
            android:layout_below="@+id/textView3" android:layout_toRightOf="@+id/ButtonOpciones"
            android:layout_toEndOf="@+id/ButtonOpciones"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CARGA"
              android:id="@+id/textView20"
              android:layout_below="@+id/editTextCiudad" android:layout_centerHorizontal="true"/>
</RelativeLayout>
