<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="co.com.widetech.mamut.android.view.infoCargueActivity$PlaceholderFragment">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Ciudad"
            android:ems="10"
            android:id="@+id/editText2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:inputType="textPersonName" android:text="Carga" android:ems="10" android:id="@+id/editText3"
              android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:text="Enviar"
            android:id="@+id/imageButton6" android:layout_below="@+id/editText3"
            android:layout_alignRight="@+id/editText3" android:layout_alignEnd="@+id/editText3"
            android:layout_marginRight="33dp" android:layout_marginEnd="33dp" android:layout_marginTop="35dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Chat"
            android:elevation="20dp" android:id="@+id/imageButton7"
                 android:layout_alignTop="@+id/imageButton6" android:layout_alignLeft="@+id/editText3"
                 android:layout_alignStart="@+id/editText3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMACION DE CARGUE"
            android:id="@+id/textView3"
            android:layout_marginTop="59dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:elevation="20dp" android:id="@+id/imageButton8"
            android:text="Opciones"
                 android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" android:layout_marginBottom="20dp"
                 android:layout_marginLeft="20dp"/>
</RelativeLayout>
