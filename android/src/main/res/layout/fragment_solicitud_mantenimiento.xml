<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="co.com.widetech.mamut.android.view.SolicitudMantenimientoActivity$PlaceholderFragment">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitud mantenimiento"
            android:id="@+id/ButtonSolicitudMantenimiento" android:layout_gravity="center"
            android:layout_below="@+id/editTextMantenimiento" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:id="@+id/ButtonChat" android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EN MANTENIMIENTO"
            android:id="@+id/textView28" android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMantenimiento"
            android:layout_centerVertical="true" android:layout_alignLeft="@+id/ButtonSolicitudMantenimiento"
            android:layout_alignStart="@+id/ButtonSolicitudMantenimiento" android:layout_alignRight="@+id/textView28"
            android:layout_alignEnd="@+id/textView28"/>
</RelativeLayout>
