<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <!-- ListRow Left sied Thumbnail image chat Row -->


        <!-- Name Of User -->


        <!-- Message -->

        <TextView
                android:id="@+id/MessageUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/NameUser"
                android:layout_below="@id/NameUser"
                android:layout_marginTop="1dip"
                android:layout_marginLeft="1dp"
                android:textSize="15dip"/>

        <!-- Hour Message -->

        <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:layout_alignParentRight="true"
                >
            <ImageView
                    android:id="@+id/list_image"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignRight="@+id/MessageUser"
                    android:src="@drawable/ic_launcher"/>
        </LinearLayout>

        <TextView
                android:id="@+id/NameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/thumbnail"
                android:textSize="16dip"
                android:textStyle="bold"
                android:typeface="sans"/>

        <TextView
                android:id="@+id/HourMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/MessageUser"
                android:layout_alignTop="@+id/NameUser"
                android:gravity="right"
                android:textSize="12dip"
                android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>
