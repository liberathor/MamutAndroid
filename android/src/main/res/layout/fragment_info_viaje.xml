<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="co.com.widetech.mamut.android.view.InfoViajeVacioActivity$PlaceholderFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIUIDAD DE DESTINO"
            android:id="@+id/textView7" android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editTextDestino" android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ORDEN DE SERVICIO"
              android:id="@+id/textView8"
              android:layout_below="@+id/editTextDestino" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextServicio" android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/editTextDestino"
            android:layout_alignStart="@+id/editTextDestino" android:layout_alignRight="@+id/editTextDestino"
            android:layout_alignEnd="@+id/editTextDestino"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TRAILER"
              android:id="@+id/textView9" android:layout_below="@+id/editTextServicio"
              android:layout_centerHorizontal="true"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTextTrailer"
              android:layout_below="@+id/textView9"
              android:layout_alignLeft="@+id/editTextServicio" android:layout_alignStart="@+id/editTextServicio"
              android:layout_alignRight="@+id/editTextServicio" android:layout_alignEnd="@+id/editTextServicio"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:id="@+id/ButtonChat"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Enviar"
            android:id="@+id/ButtonEnviarInfoViaje"
            android:layout_below="@+id/editTextTrailer"
            android:layout_alignRight="@+id/editTextTrailer" android:layout_alignEnd="@+id/editTextTrailer"
            android:layout_alignLeft="@+id/editTextTrailer" android:layout_alignStart="@+id/editTextTrailer"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones"
            android:id="@+id/ButtonOptions"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INFORMACION DE VIAJE"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
