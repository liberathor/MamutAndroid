<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
        >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true" >
        <Button
                android:layout_marginTop="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Operacion Nacional"
                android:elevation="20dp"
                android:id="@+id/ButtonOpNal"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <Button
                android:layout_margin="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Viaje vacio"
                android:elevation="20dp"
                android:id="@+id/ButtonViajeVacio"
                android:layout_below="@+id/ButtonLlegadaDescargar" android:layout_alignParentLeft="true"
                />
        <Button
                android:layout_margin="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Chat"
                android:elevation="20dp"
                android:id="@+id/ButtonChat"
                android:layout_below="@+id/ButtonViajeVacio" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <Button
                android:layout_margin="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Proyectos"
                android:elevation="20dp"
                android:id="@+id/ButtonLlegadaDescargar"
                android:layout_alignTop="@+id/ButtonOpNal" android:layout_alignParentRight="true"
                />
        <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Tanqueo"
                android:elevation="20dp"
                android:id="@+id/ButtonTanqueo"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp" android:layout_below="@+id/ButtonLlegadaDescargar"/>
        <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Mantenimiento"
                android:elevation="20dp"
                android:id="@+id/ButtonMantenimiento"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp" android:layout_below="@+id/ButtonTanqueo"/>
    </RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU PRINCIPAL"
            android:id="@+id/textView"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp" android:textSize="@dimen/abc_text_size_large_material"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonSalida"
            android:text="Salida"
            android:elevation="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            />
</RelativeLayout>

