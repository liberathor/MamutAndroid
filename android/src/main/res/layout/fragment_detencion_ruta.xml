<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="co.com.widetech.mamut.android.view.DetencionRutaActivity$PlaceholderFragment">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:rowCount="2" android:columnCount="2"
            android:useDefaultMargins="true"
            android:orientation="horizontal" android:id="@+id/gridLayout2">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pausa activa"
                android:id="@+id/ButtonPausaActiva"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pernoctacion"
                android:id="@+id/ButtonPernoctacion"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alimentacion"
                android:id="@+id/ButtonAlimentacion"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otro motivo"
                android:id="@+id/ButtonOtro"/>
    </GridLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones"
            android:id="@+id/ButtonOptions" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:id="@+id/ButtonChat"
            android:layout_alignTop="@+id/ButtonOptions" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DETENCION DE RUTA"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
