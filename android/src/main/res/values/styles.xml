<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.Base" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.Base.buttonStyle</item>
        <item name="android:windowBackground">@drawable/ic_background</item>
        <item name="android:preferenceScreenStyle">@style/AppTheme.Base.Preference</item>
    </style>

    <style name="AppTheme.Base.buttonStyle" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_shaped</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <style name="AppTheme.Base.Preference">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:background">#cccccc</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">6px</item>
        <item name="android:paddingBottom">6px</item>
        <item name="android:paddingLeft">12px</item>
    </style>

    <style name="AppTheme.editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Base.Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:background">@android:color/background_dark</item>
    </style>

</resources>
