<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base"
           parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarSize">@dimen/abc_action_bar_default_height_material</item>
        <item name="windowActionBar">true</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:windowBackground">@drawable/ic_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/textAppareance</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_shaped</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <style name="textAppareance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
